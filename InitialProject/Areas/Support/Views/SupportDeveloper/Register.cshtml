@model RegisterSupportDeveloper

@{
    Layout = "_RegisterLayout";
}

<h2>Register Account</h2>
<form asp-action="Register" asp-controller="SupportDeveloper" method="post" enctype="multipart/form-data" id="registerForm">
    @Html.AntiForgeryToken()

    <span class="text-danger">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </span>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" placeholder="Full Name" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" placeholder="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" placeholder="Phone Number" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageProfile" class="control-label"></label>
        <input asp-for="ImageProfile" type="file" class="form-control" />
        <span asp-validation-for="ImageProfile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-secondary custom-button">Register</button>
</form>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
