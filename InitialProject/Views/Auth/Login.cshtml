@model LoginModel
@{
    Layout = "_RegisterLayout";
}
<h2>تسجيل دخول </h2>
<form asp-action="Login" asp-controller="Auth" method="post">
    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
    <span class="text-danger">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </span>
    <div class="form-group">
        <input asp-for="EmailorPhoneNumber" placeholder="Email or PhoneNumber" class="form-control" />
        <span asp-validation-for="EmailorPhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-secondary custom-button">تسجيل الدخول</button>
</form>

<div role="group" aria-label="Basic example" class="button-group mt-3">
    <button type="button" class="btn btn-secondary custom-button" onclick="location.href='@Url.Action("RegisterAdmin", "Auth")'">
        انشاء حساب جديد
    </button>
</div>