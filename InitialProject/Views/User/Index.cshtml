@model AuthDTO

<div class="container mt-4">
    <h2>User Profile</h2>
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="@Model.ProfileImage" alt="Profile Image" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;" />
                </div>
                <div class="col-md-9">
                    <h6>Email</h6>
                    <p>@Model.Email</p>
                    <h6>Full Name</h6>
                    <p class="mt-3">@Model.FullName</p>
                    <h6>Role</h6>
                    <p>@Model.Role</p>

                </div>
            </div>
        </div>
    </div>
</div>
